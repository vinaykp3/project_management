<div class="main-container">
  <h1>Create New Employee</h1>

  <div class="navigation-list">
    <li><%= image_tag("arrow.png", :alt=>"arrow", :class => "arrow") %><%= link_to "Show All Employees", employees_path%></li>
  </div>

  <div class="employees-list">
  <div class="employee-form">

    <%= form_for(@employee) do |f|%>
        <%= render 'shared/error_messages'%>
        <div class="form-mainbox2">
        <div class="form-label">
          <%= f.label :emp_id %>
        </div>
        <div class="form-fieldbox">
          <%= f.text_field :emp_id %>
        </div>

        <div class="form-label">
          <%= f.label :name %>
        </div>
        <div class="form-fieldbox">
          <%= f.text_field :name %>
        </div>
        </div>

        <div class="form-mainbox2">
        <div class="form-label">
          <%= f.label :gender %>
        </div>
        <div class="form-fieldbox">
          <%= f.select :gender, options_for_select([['Select Gender',''],['Male','Male'],['Female','Female']])  %>
        </div>

        <div class="form-label">
          <%= f.label :date_of_joining %>
        </div>
        <div class="form-fieldbox">
          <%= f.text_field :date_of_joining %>
        </div>
        </div>
        <div class="cls"></div>

        <div class="form-button">
          <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
        </div>

    <% end %>
  </div>
</div>
</div>

<div class="cls"></div>